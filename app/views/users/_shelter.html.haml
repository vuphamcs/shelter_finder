    .large-4.columns
      %h4= shelter.name
    .large-8.columns
      - if shelter.full
        .alert.full-label FULL
  .row
    .large-12.columns Address: #{shelter.address}
  .row
    .large-3.columns Phone: #{shelter.phone}
    .large-3.columns Email: #{mail_to shelter.email}
    .large-6.columns
  .row
    .large-12.columns
      .donate-button
        :plain
          <script async="async" src="/paypal-button.min.js?merchant=oneamtu89-facilitator@gmail.com"
              data-button="donate"
              data-name="Donation"
              data-env="sandbox"
          ></script>
