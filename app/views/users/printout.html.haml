%main{role: "main"}
  .row
    :erb
      <style type="text/css">
      table {
        border-width: 0;
        border-style: none;
        border-color: #0000ff;
        border-collapse: collapse;
        margin: auto;
        padding: 20px;
        margin-bottom: 20px;
      }
      td {
        border-width: 0;
        border-style: none;
        border-color: #0000ff;
        border-collapse: collapse;
        padding: 0;
        margin: 0;
        width: 10px;
        height: 10px;
      }
      td.black { background-color: #000; }
      td.white { background-color: #fff; }
      </style>

      <table>
      <% @qr.modules.each_index do |x| %>
        <tr>
        <% @qr.modules.each_index do |y| %>
        <% if @qr.dark?(x,y) %>
          <td class="black"/>
        <% else %>
          <td class="white"/>
        <% end %>
        <% end %>
        </tr>
      <% end %>
      </table>
  .row
    %table{style: 'margin: auto'}
      %td{style: "font-size: 3em; width: auto"} Help me help #{@user.name}!
