%h1 Listing guests
%table
  %thead
    %tr
      %th Phone number
      %th City
      %th State
      %th Zip
      %th Country
      %th{:colspan => "3"}
  %tbody
    - @guests.each do |guest|
      %tr
        %td= guest.phone_number
        %td= guest.city
        %td= guest.state
        %td= guest.zip
        %td= guest.country
        %td= link_to 'Show', guest
        %td= link_to 'Edit', edit_guest_path(guest)
        %td= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Guest', new_guest_path
